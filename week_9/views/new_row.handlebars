

<div>
<form id='workoutForm' action="/data/" method="POST">
	<fieldset>
		<label> Name: <input type="text" name="name" size="30" required="required" maxlength="100"></label>
		<label> Reps: <input type="number" name="reps" size="10" required="required" maxlength="100"></label>
		<label> Weight: <input type="number" name="weight" size="10" required="required" maxlength="100"></label>
		<label> Date: <input type="date" name="date" size="20" required="required" width="100%" maxlength="15"></label>	
		<label> Type: <input type="radio" name="lbs" value="1" checked="checked"/ >lbs<input type="radio" name="lbs" value="0"/>kg</label>	
	<input id="submitWorkout" type="submit" value="Submit" />
	</fieldset>
</form>
</div>

<br>
<div>



<table id="workoutTable">
	<thead> 
		<tr> 
				<th>Exercise</th>
				<th>Reps</th>
				<th>Weight</th>
				<th>Date</th>
				<th>lbs/kg</th>
				
		</tr>   
    </thead> 
    <tbody> 
        {{#each results}} 
        <tr id={{this.id}}> 
            <td>{{this.name}}</td> 
            <td>{{this.reps}}</td> 
			<td>{{this.weight}}</td> 
            <td>{{this.date}} </td> 
			{{#if this.lbs}}
				<td>lbs</td>
			{{else}}
				<td>kg</td>
			{{/if}}		
        	<td><button class"edit_btn" id="edit" onclick="editRow('workoutTable',this)">Edit</button></td>      
      		<td><button type="button"  id="delete" onclick="deleteRow('workoutTable',this)">Delete</button></td>   
			
		</tr> 
        {{/each}} 
    </tbody> 
</table> 
</div>


